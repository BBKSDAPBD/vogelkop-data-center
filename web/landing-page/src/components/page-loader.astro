---
/**
 * Page Loader Component
 *
 * Displays a loading screen with:
 * - Animated dots that light up as progress increases
 * - Labels that transform from percentages to navbar titles
 * - Smooth slide-up animation to navbar position on complete
 */

const NAV_TITLES = [
  "Intro",
  "Profile",
  "Organisasi",
  "Data & Informasi",
  "Kawasan & Pelayanan",
  "Connect",
] as const;

const DOT_THRESHOLDS = [0, 20, 40, 60, 80, 100] as const;
---

<div
  id="page-loader"
  class="page-loader"
  role="progressbar"
  aria-valuenow="0"
  aria-valuemin="0"
  aria-valuemax="100"
  aria-label="Loading page content"
>
  <div class="loader-content">
    <!-- Dots with percentage labels that change to titles -->
    <div class="dots-row">
      {DOT_THRESHOLDS.map((threshold, index) => (
        <div
          class="dot-item"
          data-threshold={threshold}
          data-title={NAV_TITLES[index]}
        >
          <span class="dot" aria-hidden="true" />
          <span class="dot-label">
            <span class="label-text">{threshold}%</span>
          </span>
        </div>
      ))}
    </div>

    <!-- Progress bar -->
    <div class="progress-track" aria-hidden="true">
      <div class="progress-fill" id="progress-bar" />
    </div>
  </div>
</div>

<style>
  .page-loader {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: var(--background);
    opacity: 1;
    visibility: visible;
    transition: opacity 0.4s ease 0.3s, visibility 0.4s ease 0.3s;
  }

  .page-loader.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .loader-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 1600px;
    padding: 0 1rem;
  }

  /* Dots row - matches navbar grid */
  .dots-row {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1rem;
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
  }

  .dot-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0;
    transform: translateY(10px);
    animation: dot-appear 0.4s ease-out forwards;
  }

  /* Staggered dot appearance */
  .dot-item:nth-child(1) { animation-delay: 0.1s; }
  .dot-item:nth-child(2) { animation-delay: 0.15s; }
  .dot-item:nth-child(3) { animation-delay: 0.2s; }
  .dot-item:nth-child(4) { animation-delay: 0.25s; }
  .dot-item:nth-child(5) { animation-delay: 0.3s; }
  .dot-item:nth-child(6) { animation-delay: 0.35s; }

  @keyframes dot-appear {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .dot {
    position: relative;
    display: inline-flex;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: var(--muted);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }

  .dot-item.active .dot {
    background-color: var(--primary);
    box-shadow: 0 0 8px var(--primary);
  }

  .dot-item.active .dot::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background-color: var(--primary);
    animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  @keyframes ping {
    75%, 100% {
      transform: scale(2.5);
      opacity: 0;
    }
  }

  .dot-label {
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--muted-foreground);
    transition: color 0.3s ease;
    overflow: hidden;
    height: 1.2em;
    margin-top: -6px;
  }

  .label-text {
    display: inline-block;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .dot-item.active .dot-label {
    color: var(--foreground);
  }

  .dot-item.changing .label-text {
    animation: text-swap 0.4s ease forwards;
  }

  @keyframes text-swap {
    0% { transform: translateY(0); opacity: 1; }
    40% { transform: translateY(-100%); opacity: 0; }
    60% { transform: translateY(100%); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
  }

  /* Progress bar */
  .progress-track {
    width: 100%;
    height: 1px;
    background-color: var(--muted);
    margin-top: 0.75rem;
    position: relative;
  }

  .progress-fill {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 0%;
    background-color: var(--primary);
    transition: width 0.1s linear;
  }

  /* Slide up animation */
  .page-loader.complete .loader-content {
    animation: slide-up 1s ease-out forwards;
  }

  @keyframes slide-up {
    to {
      transform: translateY(calc(-50vh + 2rem));
    }
  }

  .page-loader.complete .progress-track {
    animation: fade-out 0.3s ease-out forwards;
  }

  @keyframes fade-out {
    to { opacity: 0; }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .dot-item.active .dot::before { animation: none; }
    .dot-item { animation-duration: 0.2s; }
    .page-loader.complete .loader-content { animation-duration: 0.5s; }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .dots-row { padding: 0 0.5rem; }
    .dot-label { font-size: 0.625rem; }
    .dot { width: 6px; height: 6px; }
  }
</style>

<script is:inline>
  (function() {
    const DURATION = 2000;
    const startTime = Date.now();
    const progressBar = document.getElementById('progress-bar');
    const dotItems = document.querySelectorAll('.dot-item');
    const loader = document.getElementById('page-loader');

    function updateProgress() {
      const elapsed = Date.now() - startTime;
      const progress = Math.min(100, (elapsed / DURATION) * 100);

      // Update progress bar and ARIA
      if (progressBar) {
        progressBar.style.width = progress + '%';
      }
      if (loader) {
        loader.setAttribute('aria-valuenow', Math.round(progress).toString());
      }

      // Activate dots based on progress
      dotItems.forEach(item => {
        const threshold = parseInt(item.dataset.threshold, 10);
        if (progress >= threshold) {
          item.classList.add('active');
        }
      });

      if (progress < 100) {
        requestAnimationFrame(updateProgress);
      } else {
        // Transform labels to titles with stagger
        dotItems.forEach((item, index) => {
          const labelText = item.querySelector('.label-text');
          const title = item.dataset.title;

          setTimeout(() => {
            item.classList.add('changing');
            setTimeout(() => {
              if (labelText && title) {
                labelText.textContent = title;
              }
            }, 160);
          }, index * 50);
        });

        // Slide up and complete
        setTimeout(() => {
          if (loader) {
            loader.classList.add('complete');
            setTimeout(() => {
              loader.classList.add('hidden');
              window.dispatchEvent(new CustomEvent('pageLoaderComplete'));
            }, 1000);
          }
        }, 400);
      }
    }

    requestAnimationFrame(updateProgress);

    // Fallback timeout
    setTimeout(() => {
      if (loader && !loader.classList.contains('hidden')) {
        loader.classList.add('complete');
        setTimeout(() => {
          loader.classList.add('hidden');
          window.dispatchEvent(new CustomEvent('pageLoaderComplete'));
        }, 1000);
      }
    }, 5000);
  })();
</script>
