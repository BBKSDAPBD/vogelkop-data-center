---
import logo from '@/assets/Logo.png';
import { Image } from 'astro:assets';
import { ThemeSwitcher } from '../optics/theme-switcher';
import { Button } from '../ui/button';
import NavSection from './nav-section.astro';
---

<nav class="w-full py-8 px-6 font-sans" aria-label="Main Navigation">
  <div class="max-w-[1600px] mx-auto grid grid-cols-1 md:grid-cols-7 gap-4">
    
    <!-- logo Column -->
    <section class="space-y-6 col-span-2 mt-4 ">
      <figure class="flex flex-col gap-4">
        <div class="flex items-center gap-4">
          <Image 
            src={logo} 
            alt="Balai Besar KSDA Papua Barat Daya Logo" 
            width={64} 
            height={64} 
            class="rounded-sm"
          />
          <figcaption class="space-y-1">
            <h3 class="font-bold leading-tight">Balai Besar KSDA Papua Barat Daya</h3>
            <p class="text-sm opacity-70">Direktorat Jenderal Konservasi Sumber Daya Alam dan Ekosistem</p>
          <p class="text-[10px] tracking-wider capitalize opacity-50">Kementerian Kehutanan Republik Indonesia</p>
          </figcaption>
        </div>
      </figure>
    </section>

    <!-- Profile Column -->
    <NavSection title="Profile">
      <ul class="text-sm space-y-1.5 capitalize opacity-80">
        <li>sejarah</li>
        <li>tugas dan fungsi</li>
        <li>rencana kerja</li>
        <li>rencana strategis</li>
      </ul>
    </NavSection>

    <!-- Organisasi Column -->
    <NavSection title="Organisasi">
      <ul class="text-sm space-y-1.5 capitalize opacity-80">
        <li>dasar hukum</li>
        <li>struktur organisasi</li>
        <li>Bagian Tata Usaha</li>
        <li>Bidang Teknis KSDAE</li>
        <li>Bidang KSDA Wilayah I</li>
        <li>Bidang KSDA Wilayah II</li>
      </ul>
    </NavSection>

    <!-- Data & Informasi Column -->
    <NavSection title="Data & Informasi">
      <ul class="text-sm space-y-1.5 capitalize opacity-80">
        <li>Peraturan perundangan</li>
        <li>TSL dilindungi</li>
        <li>penelitian</li>
        <li>laporan kinerja</li>
        <li>siaran pers</li>
      </ul>
    </NavSection>

    <!-- Kawasan Konservasi & Pelayanan Column -->
    <NavSection title="Kawasan & Pelayanan">
      <div class="space-y-4">
        <div>
          <h4 class="text-[10px] uppercase tracking-widest opacity-40 mb-2">Kawasan Konservasi</h4>
          <ul class="text-sm space-y-1 capitalize opacity-80">
            <li>Cagar Alam</li>
            <li>Suaka Marga Satwa</li>
            <li>Taman Wisata Alam</li>
            <li>KSA/KPA</li>
          </ul>
        </div>
        <div>
          <h4 class="text-[10px] uppercase tracking-widest opacity-40 mb-2">Pelayanan Publik</h4>
          <ul class="text-sm space-y-1 capitalize opacity-80">
            <li>Permohonan Data</li>
            <li>izin masuk kawasan konservasi</li>
            <li>SATS-DN & SATS-LN</li>
          </ul>
        </div>
      </div>
    </NavSection>

    <!-- Connect Column -->
    <NavSection title="Connect">
      <address class="flex flex-col gap-6 not-italic">
        <ul class="text-sm space-y-1.5 list-none p-0 m-0 opacity-80">
          <li><a href="#" class="hover:text-muted-foreground transition-colors">Instagram</a></li>
          <li><a href="#" class="hover:text-muted-foreground transition-colors">Email</a></li>
          <li><a href="#" class="hover:text-muted-foreground transition-colors">Facebook</a></li>
          <li><a href="#" class="hover:text-muted-foreground transition-colors">WhatsApp</a></li>
        </ul>
        <div class="space-y-4 border-t border-white/5 pt-4">
          <div class="space-y-1">
            <p class="text-[10px] uppercase tracking-widest opacity-40">layanan pengaduan</p>
            <p class="text-sm opacity-80 font-medium">Call Center</p>
          </div>
          <div class="flex items-center gap-4">
                <Button
                    variant="decorations"
                    className="bg-transparent border-white/10 hover:bg-white/5 hover:text-muted-foreground"
                >
                    <span>0811-4850-0040</span>
                </Button>
          </div>
        </div>
      </address>
        <ThemeSwitcher client:load slot="right" />
    </NavSection>
  </div>
</nav>

<style>
  /* Custom scrollbar or other tweaks if needed */
  nav {
    scrollbar-width: none;
  }
  nav::-webkit-scrollbar {
    display: none;
  }
</style>
